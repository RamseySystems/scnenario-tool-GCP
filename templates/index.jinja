<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload</title>
    <style>
        body {
            max-width: 500px;
            margin: auto;
        }
        
        form {
            margin: 0;
            position: absolute;
            top: 50%;
            -ms-transform: translateY(-30%);
            transform: translateY(-30%);
        }
        
        form input {
            font-size: 25px;
        }
        
        .flashes {
            position: relative;
            height: 20%;
            width: 33%;
            text-align: center;
            background: #ffe58e;
            margin: auto;
        }
        
        .warning {
            height: 1.2 em;
            width: 5%;
            margin: auto;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }
        #loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            height: 100%;
            width: 100%;
            display: none;
            cursor: wait;
            background: url({{ url_for('static', filename='loading.jpg') }}) no-repeat;
        }
    </style>
</head>

<body>
    <div id="loading"></div>
    {% with messages = get_flashed_messages() %} {% if messages %}
    <div class="flashes">
        {% for message in messages %}
        <p class="'warning">{{ message }}</p>
        {% endfor %}
    </div>
    {% endif %} {% endwith %}
    <form action="/upload" method="POST" enctype="multipart/form-data" id="form">
        <input type="file" name="file" multiple />
        <input type="submit" value="Upload" onclick="loading();">
    </form>




    <script>
        function loading() {
            document.getElementById('form').style.display = 'none';
            document.getElementById('loading').style.display = 'table';
        }
    </script>
</body>

</html>